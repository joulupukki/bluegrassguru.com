---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<a
  href="https://apps.apple.com/app/bluegrass-guru/id915585580"
  target="_blank"
  rel="noopener noreferrer"
  class:list={["inline-block transition-opacity hover:opacity-80", className]}
>
  <img
    src="/images/app-store-badge.png"
    alt="Download on the App Store"
    width="180"
    height="54"
    loading="lazy"
  />
</a>
